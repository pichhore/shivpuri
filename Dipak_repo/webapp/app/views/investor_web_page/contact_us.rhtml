<div>
      <div style="text-align:right;">
          <a onclick="lightbox_controller.close();" id="streetview_close" href="#"><img src="/images/active_scaffold/default/close.gif"/></a>
       </div>
    	<div style="clear: both; height: 6px;"/>
	<%- form_remote_tag(:update => "lightbox_contents", :url=>"/investor_web_page/contact_us?permalink_text=#{params[:permalink_text]}",:html=>{:method=>:post})  do -%>
        <div style="clear: both; height: 6px;"/>
         <table style="text-align:left;margin-top:-20px;" cellspacing="10">
            <tr><td colspan="2" align="center"><b>Contact Information</b><br/> </td></tr>
            <tr><td><span style="color:#FF2631;">*</span>Name :</td><td> <%=text_field  "investor_contact_us", "name", :size=>30, :maxlength=>40 %><%=error_message_on :investor_contact_us, :name%></td></tr>
            <tr><td>&nbsp;&nbsp;Phone : </td><td><%=text_field  "investor_contact_us", "phone", :size=>30, :maxlength=>40 %><%=error_message_on :investor_contact_us, :phone%></td></tr>
            <tr><td><span style="color:#FF2631;">*</span>Email : </td><td><%=text_field  "investor_contact_us", "email", :size=>30, :maxlength=>40 %><%=error_message_on :investor_contact_us, :email%></td></tr>
            <tr><td><span style="color:#FF2631;">*</span>Message : </td><td><%=text_area  "investor_contact_us", "message", :cols=>44,:rows=>4 %><%=error_message_on :investor_contact_us, :message%></td></tr>
            <tr>
              <td colspan="2" align="center">
                     &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp <input type="submit" value=" Submit " name="commit" class="submit_l"/>
                    <%- if request.xhr? -%>
                      <%= button_to_function 'Cancel', 'lightbox_controller.close()', :class=>"submit_l" %>
                    <%- end -%>
               </td>
          </tr>
      </table>
    	<%- end -%>
    </div>
</div>
<script type="text/javascript">
    $('investor_contact_us_name').focus();
    $('investor_contact_us_name').select();
</script>

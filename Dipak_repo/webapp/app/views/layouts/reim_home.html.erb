<script type="text/javascript">

var arr = ['signup_name', 'signup_email'];
jQuery.each(arr, function(){
  $("#" + this).click(function(){
    var text = $(this).val(); 
    if(text == 'First Name' || text == 'Your Email'){
      $(this).val('');
    }
  })
})

var arr = ['email', 'password'];
jQuery.each(arr, function(){
  $("#" + this).click(function(){
    var text = $(this).val(); 
    if(text == 'Email' || text == 'Password'){
      $(this).val('');
    }
  })
})

$("#signup_name").focusout(function(){
  if($(this).val() == '')
    $(this).val('First Name');
})

$("#signup_email").focusout(function(){
  if($(this).val() == '')
    $(this).val('Your Email');
})

$("#email").focusout(function(){
  if($(this).val() == '')
    $(this).val('Email');
})


$('#signup_form').submit(function(){
    if($('#signup_name').val() == "" || $('#signup_name').val() == "First Name"){
      alert("Firstname can't be empty");
      return false;
    }
    else if($('#signup_email').val() == "" || $('#signup_email').val() == "Your Email"){
      alert("Email can't be empty");
      return false;
    }
})


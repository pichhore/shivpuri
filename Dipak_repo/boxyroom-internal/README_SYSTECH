/// Install RVM on linux

user$ bash < <(curl -s https://rvm.beginrescueend.com/install/rvm)
user$ echo '[[ -s "$HOME/.rvm/scripts/rvm" ]] && . "$HOME/.rvm/scripts/rvm" # Load RVM function' >> ~/.bash_profile
 
/// Then open a new tab 

user$ source .bash_profile
user$ type rvm | head -1

/// After that if you find "rvm is a function" then RVM has installed sucessfully


///Installtion of compatible ruby version

user$ rvm install 1.9.1

user$ rvm list
user$ rvm use ruby-1.8.7-p334
user$ gem install rails --version 2.3.3
user$ gem install mysql
user$ rake gems:install

Insta image magick for paper click
//
So finally we are using
ruby  : 1.8.7-p334
Rails : 2.3.3
gems  : 1.6.2

// Add following code in envioroment.rb
if Gem::Version.new(Gem::VERSION) >= Gem::Version.new('1.3.7')
 module Rails
   class GemDependency
     def requirement
       r = super
       (r == Gem::Requirement.default) ? nil : r
     end
   end
 end
end 

config.gem "validates_timeliness", :version => "~> 2.3"
config.gem "authlogic", :version =>
 "~> 2"


// Add a folowing line at the top of boot.rb file
require 'thread'



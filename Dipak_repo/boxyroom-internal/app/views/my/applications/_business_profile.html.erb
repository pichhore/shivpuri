
  <fieldset id="business">
    <div class="clr"></div>
    <div class="select_list">
      <label>Nature of Employment:</label>
      <p class="r" >
          <input type="text" value="<%= @application.profile.nature_of_employment.tableize.singularize.gsub('_', ' ').gsub(/\b\w/){$&.upcase} %>" name="employment_nature" id="employment_nature" style="width: 200px;" />
      </p>
    </div>
    <div class="clr"></div>
    <div class="select_list">
      <label>Start of Employment: </label>
      <p class="r" style="width: 350px;">
          <input type="text" value="<%= @application.profile.start_of_employment.day%>" name="start_employment_date" id="start_employment_date" class="small" />
          <input type="text" value="<%= @application.profile.start_of_employment.strftime("%B").upcase%>" name="start_employment_month" id="start_employment_month" class="small" >

          <input type="text" value="<%= @application.profile.start_of_employment.year%>"  name="start_employment_year" id="start_employment_year" class="small" >
      </p>
    </div>
    <div class="clr"></div>
    <div class="select_list">
      <label>End of Employment: </label>
      <p class="r" style="width: 350px;">
        <input type="text" value="<%= @application.profile.end_of_employment.day%>" name="start_employment_date" id="start_employment_date" class="small" />
        <input type="text" value="<%= @application.profile.end_of_employment.strftime("%B").upcase%>" name="start_employment_month" id="start_employment_month" class="small" >
        <input type="text" value="<%= @application.profile.end_of_employment.year%>"  name="start_employment_year" id="start_employment_year" class="small" >
      </p>
    </div>
    <div class="clr"></div>
    <div class="select_list">
      <label>Company Name:</label>
      <p class="r">
          <input value="<%= @application.profile.company_name%>" type="text" name="Company" id="Company" />
      </p>
    </div>
    <div class="clr"></div>
    <div class="select_list">
      <label>Industry:</label>
      <p class="r">
          <input value="<%= @application.profile.industry%>" type="text" name="Industry" id="Industry" />

    </div>
    <div class="clr"></div>
    <div class="select_list">
      <label>Position:</label>
      <p class="r">
          <input value="<%= @application.profile.position%>" type="text" name="Position" id="Position" />
      </p>
    </div>
    <div class="clr"></div>
    <div class="select_list">
      <label>Gross Annual Salary:</label>
      <p class="r">
          <input value="<%= @application.profile.gross_annual_salary%>" type="text" name="Salary" id="Salary" />
      </p>
    </div>
